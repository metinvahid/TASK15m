
@model List<Country>

<div class="row">
    <div class="col-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Code
                    </th>
                    <th>

                        <a asp-controller="Countries" asp-action="Create new">Create new</a>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Code
                        </td>
                        <td>



                            <a asp-controller="Countries" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a asp-controller="Countries" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a asp-controller="Countries" asp-action="Remove" asp-route-id="@item.Id">Remove</a>
                            <!--a href="/countries/edit/@item.Id">Edit</a>
                                <a href="/countries/remove/@item.Id">Remove</a>
                            -->

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
